@{
    ViewData["Title"] = "Movies";
}

@model Mission06_meldrumn.Models.ApplicationResponse

<div class="text-center">
    <h1 class="display-4">Enter A Movie You Like</h1>
</div>

<br />

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

         @*helps solve duplication error <input asp-for="MovieID" type="hidden"/>*@
        <label asp-for="Category">Category:</label>
        <select asp-for="CategoryID" required>
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
            @*<option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>*@
        </select><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required/><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" required/><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" required/><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" required>
            <option value="">Select a Category</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="">Select a Category</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select><br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" /><br />

        <button type="submit">Submit Movie</button>
    </form>
</div>